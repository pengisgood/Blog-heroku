<% title 'Make dream · Personal website' %>
<% page_name 'home' %>
<div class="row">
  <div class="main col-md-9">
    <% @posts.each do |post| %>
        <article class="post">
          <h2><%= post.title %></h2>
          <div class="info">
            <span class="date"><%= post.updated_at.to_date %></span>
            <span class="author"></span>
            <span class="views"></span>
          </div>
          <div class="content">
            <%= markdown post.content %>
          </div>
          <footer>
            <span class="category"></span>
            <span class="tag"></span>
          </footer>
        </article>
    <% end %>
  </div>
